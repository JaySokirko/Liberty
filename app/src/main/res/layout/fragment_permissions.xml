<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/permissions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Camera and storage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/camera_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't asked"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/permissions_button"
        app:layout_constraintTop_toBottomOf="@+id/permissions_button" />

    <TextView
        android:id="@+id/storage_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="Don't asked"
        app:layout_constraintStart_toStartOf="@+id/camera_hint_text_view"
        app:layout_constraintTop_toBottomOf="@+id/camera_hint_text_view" />

    <Button
        android:id="@+id/contacts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="contacts"
        app:layout_constraintStart_toStartOf="@+id/permissions_button"
        app:layout_constraintTop_toBottomOf="@+id/storage_hint_text_view" />

    <TextView
        android:id="@+id/contacts_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="Don't asked"
        app:layout_constraintStart_toStartOf="@+id/contacts_button"
        app:layout_constraintTop_toBottomOf="@+id/contacts_button" />

    <Button
        android:id="@+id/calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Calendar"
        app:layout_constraintStart_toStartOf="@+id/contacts_button"
        app:layout_constraintTop_toBottomOf="@+id/contacts_hint_text_view" />

    <TextView
        android:id="@+id/calendar_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="Don't asked"
        app:layout_constraintStart_toStartOf="@+id/calendar_button"
        app:layout_constraintTop_toBottomOf="@+id/calendar_button" />

</androidx.constraintlayout.widget.ConstraintLayout>